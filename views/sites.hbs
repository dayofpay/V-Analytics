<div class="wrapper">
	{{>sidebar}}

	<div class="main">
		<nav class="navbar navbar-expand navbar-light navbar-bg">
			<a class="sidebar-toggle js-sidebar-toggle">
				<i class="hamburger align-self-center"></i>
			</a>

			{{>topbar}}
		</nav>

		<main class="content">
			<div class="container-fluid p-0">

				<h1 class="h3 mb-3">My Sites</h1>

				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h5 class="card-title mb-0">Site List</h5>
							</div>
							<div class="card-body">
								{{#each site}}
								{{>siteCard}}

								{{else}}
								<div class="bd-example">
									<div class="alert alert-primary d-flex align-items-center" role="alert">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
											fill="currentColor"
											class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"
											viewBox="0 0 16 16" role="img" aria-label="Warning:">
											<path
												d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z">
											</path>
										</svg>
										<div>
											You dont have any added sites yet.
										</div>

									</div>
								</div>
								{{/each}}

							</div>
						</div>

					</div>
					<a class="btn btn-primary" href="/sites/create">Create site</a>
				</div>

			</div>
		</main>

		<footer class="footer">
			<div class="container-fluid">
				<div class="row text-muted">
					<div class="col-6 text-start">
						<p class="mb-0">
							<a class="text-muted" href="https://V-Analytics.io/"
								target="_blank"><strong>V-Analytics</strong></a> &copy;
						</p>
					</div>
					<div class="col-6 text-end">
						<ul class="list-inline">
							<li class="list-inline-item">
								<a class="text-muted" href="https://V-Analytics.io/" target="_blank">Support</a>
							</li>
							<li class="list-inline-item">
								<a class="text-muted" href="https://V-Analytics.io/" target="_blank">Help Center</a>
							</li>
							<li class="list-inline-item">
								<a class="text-muted" href="https://V-Analytics.io/" target="_blank">Privacy</a>
							</li>
							<li class="list-inline-item">
								<a class="text-muted" href="https://V-Analytics.io/" target="_blank">Terms</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</footer>
	</div>
</div>